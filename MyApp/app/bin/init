#!/bin/bash
_term() {
  echo "Caught SIGTERM signal!"
  kill -TERM "$child" 2>/dev/null
  echo "Killed?"
}

trap _term SIGTERM

cd $APP_DIR/program/
dotnet restore
dotnet publish

$APP_DIR/bin/websocketd --port=80 --staticdir=./html/ dotnet ./program/bin/Debug/netcoreapp1.1/publish/program.dll

child=$!
wait "$child"
